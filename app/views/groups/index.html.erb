<% @groups.each do |group| %>
<div class="group-box <%= group.id %> col-xs-10 col-xs-offset-1 color-<%= (1..10).to_a.sample %>"><p><h1>Group Name:<%= group.name %></h1></p>
      <div><ol>
      <% group.users.each do |user| %>
      <h2>Group Members:</h2>
              <% if user.username != nil  %>
        <li><strong><%= user.username %></strong><li>
            <% end %>

      <% end %></ol></div>      
      <% group.categories.each do |category| %>
        <div><h2>Category Name: <%= category.name %></h2>
            <i>Tasks: </i>
            <% category.tasks.each do |task| %>
           
              <div><%= task.name %><br>
            <% end %></div>
            
      <% end %></div>   
<% end %></div>    