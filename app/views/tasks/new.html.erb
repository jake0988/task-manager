<h1>New Task</h1>

<%= form_for @task, url: user_tasks_path(@user) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :category_name, "Select or Add a Category"  %>
  <%= f.text_field :category_name, list: "categories_autocomplete" %>
   <datalist id="categories_autocomplete">
    <% Category.all.each do |category| %>
      <option value=<%= category.name %>>
      <% end %>
   </datalist>
  <%= f.submit %>
<% end %>